<div class="row">
  <div class="col-lg-4 col-md-6">
    <h1>Login</h1>

    {{#form-for controller id="form-comp"}}
      {{input identification id='identification' placeholder='Enter E-Mail' label='User Name'}}
      {{input password id='password' placeholder='Enter Password'}}
      <button type="submit" class="btn btn-primary login-button" {{action "authenticate" model}}>Login</button>
    {{/form-for}}

  </div>
</div>
