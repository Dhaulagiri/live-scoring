<h1 class="text-center">{{name}}</h1>
<div class="row">
  <div class="col-lg-4 col-lg-offset-3">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd>{{name}}</dd>
      <dt>Date</dt>
      <dd>{{formatted-date date}}</dd>
    </dl>
    <div class="pull-right">
      <button type="button" class="btn btn-default edit-button" {{action "edit" this}}>Edit</button>
      <button type="button" class="btn btn-danger delete-button" {{action "delete" this}}>Delete</button>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-3">
    {{partial "events/index"}}
  </div>
</div>
